<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lesaas.mapper.RoleMapper">

	<resultMap type="com.lesaas.model.Role" id="roleResultMap">
		<id column="role_id" property="roleId"/>
		<result column="role_name" property="roleName"/>
		<result column="rights" property="rights"/>
	</resultMap>
	
	<select id="listAllRoles" resultMap="roleResultMap">
		select * from bas_role
	</select>
	
	<select id="getRoleById" parameterType="int" resultMap="roleResultMap">
		select * from bas_role where role_id=#{roleId}
	</select>
	<select id="getCountByName" parameterType="com.lesaas.model.Role" resultType="int">
		select count(role_id) from bas_role where role_name=#{roleName}
		<if test="roleId!=null or roleId>0">
		 and role_id!=#{roleId}
		</if>
	</select>
	
	<insert id="insertRole" parameterType="com.lesaas.model.Role" useGeneratedKeys="true" keyProperty="roleId">
		insert into bas_role (role_name) values (#{roleName})
	</insert>
	
	<update id="updateRoleBaseInfo" parameterType="com.lesaas.model.Role">
		update bas_role set role_name=#{roleName} where role_id=#{roleId}
	</update>
	<update id="updateRoleRights" parameterType="com.lesaas.model.Role">
		update bas_role set rights=#{rights} where role_id=#{roleId}
	</update>
	<delete id="deleteRoleById" parameterType="int">
		delete from bas_role where role_id=#{roleId}
	</delete>
</mapper>